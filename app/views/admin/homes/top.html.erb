<div class="container my-5">
  <div class="row">
    <div class="col-lg-10 col-sm-12 mx-auto">
      <div class="row mb-3">
        <div class="col-12">
          <h4><span class="bg-light bg-gradient">投稿一覧</span></h4>
        </div>
      </div>
      <div class="row">
        <table class="table table-borderless border-top mt-3">
          <thead class="bg-light">
            <th>投稿日時</th>
            <th>投稿者ID</th>
            <th>投稿者</th>
            <th>タイトル</th>
            <th>通報ステータス</th>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.created_at %></td>
                <td><%= post.contributor.id %></td>
                <td><%= post.contributor.add_full_name %></td>
                <td><%= post.title %></td>
                <td><%= post.report_status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="row justify-content-center my-5">
  <%= paginate @posts %>
  </div>
</div>