<div class="container-fluid">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-7">
        <div class="border border-secondary-subtle">
          <div class="bg-info p-2 text-light text-center">
            <h2>管理者ログイン</h2>
          </div>
          <div class="m-5">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="d-flex justify-content-start mb-3">
              <%= f.label :メールアドレス, class: "w-25" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-50", placeholder: 'sample@example.com' %>
            </div>
          
            <div class="d-flex justify-content-start mb-3">
              <%= f.label :パスワード, class: "w-25" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "w-50" %>
            </div>
          
            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <div class="form-check">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, "ログイン情報を保持する", class: "form-check-label ml-1" %>
                </div>
              </div>
            <% end %>
            
            <div class="actions text-center mb-4">
              <%= f.submit "ログイン", class: "btn btn-success" %>
            </div>
          <% end %>
          
          <%= render "admin/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>