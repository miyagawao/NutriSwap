<div class="container my-5">
  <div class="row">
    <% if @contributor.errors.any? %>
      <div class="col-12">
        <%= @contributor.errors.count %>件のエラーが発生しました。:
        <ul>
          <% @contributor.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-12 mx-auto">
      <h3><span class="bg-light bg-gradient"><%= @contributor.add_full_name %>さんの会員詳細</span></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <%= form_with model: @contributor, url: admin_contributor_path, method: :patch do |f| %>
        <div class="table-responsive">
          <table class="table table-borderless">
            <tr>
              <td class="bg-light bg-gradient">会員ID</td>
              <td><%= @contributor.id %></td>
            </tr>
            <tr>
              <td class="bg-light bg-gradient">氏名</td>
              <td>
                <%= f.text_field :last_name %>
                <%= f.text_field :first_name %>
              </td>
            </tr>
            <tr>
              <td class="bg-light bg-gradient">カナ</td>
              <td>
                <%= f.text_field :last_name_kana %>
                <%= f.text_field :first_name_kana %>
              </td>
            </tr>
            <tr>
              <td class="bg-light bg-gradient">ニックネーム</td>
              <td><%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "ニックネーム" %></td>
            </tr>
            <tr>
              <td class="bg-light bg-gradient">郵便番号</td>
              <td>
                <%= f.text_field :postal_code %>
              </td>
            </tr>
            <tr>
              <td class="bg-light bg-gradient">住所</td>
              <td>
                <%= f.text_field :address %>
              </td>
            </tr>
            <tr>
              <td class="bg-light bg-gradient">メールアドレス</td>
              <td>
                <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
              </td>
            </tr>
            <tr>
              <td class="bg-light bg-gradient">電話番号</td>
              <td>
                <%= f.text_field :telephone_number %>
              </td>
            </tr>
            <tr>
              <td class="bg-light bg-gradient">資格</td>
              <td>
                <%= f.radio_button :qualification, "管理栄養士" %>
                <%= f.label :qualification, "管理栄養士", style: "margin-right: 20px;" %>
                <%= f.radio_button :qualification, "栄養士" %>
                <%= f.label :qualification, "栄養士", style: "margin-right: 20px;" %>
                <%= f.radio_button :qualification, "調理師" %>
                <%= f.label :qualification, "調理師", style: "margin-right: 20px;" %>
                <%= f.radio_button :qualification, "調理従事者" %>
                <%= f.label :qualification, "調理従事者", style: "margin-right: 20px;" %>
              </td>
            </tr>
            <tr>
              <td class="bg-light bg-gradient">自己紹介</td>
              <td><%= f.text_area :introduce, rows: 5, style: "width: 100%;" %></td>
            </tr>
            <tr>
              <td class="bg-light bg-gradient">プロフィール画像</td>
              <td><%= f.file_field :profile_image %></td>
            </tr>
            <tr>
              <td class="bg-light bg-gradient">会員ステータス</td>
              <td>
                <%= f.label :is_deleted, '有効', value: false %>
                <%= f.radio_button :is_deleted, 'false' %>
                <%= f.label :is_deleted, '退会', value: true %>
                <%= f.radio_button :is_deleted, 'true' %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "変更を保存", class: 'btn btn-success' %></td>
            </tr>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>