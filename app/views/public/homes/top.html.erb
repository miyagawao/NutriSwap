<div class="container pl-5">
  <div class="text-center mt-5 mb-3"><h5><strong><%= flash[:notice] %></strong></h5></div>
  <div class="border-bottom" style="background-color: #ffffe5;">
    <h2>会員情報</h2>
  </div>
  
  <div class="card-header">
    <div class="col-md-8"  style="margin-top: 50px;">
      <div class="d-flex" style="margin-left: 50px;">
        <%= image_tag(current_contributor.get_image, style: "width: 30%; height: auto;") %>
        <div class="ml-5 pl-5">
          <div class="row">
            <table class="table float-right">
              <tr>
                <td><strong>ニックネーム</strong></td>
                <td><%= current_contributor.nickname %></td>
              </tr>
              <tr>
                <td><strong>保有資格</strong></td>
                <td>
                  <%= current_contributor.qualification %>
                </td>
              </tr>
              <tr>
                <td><strong>自己紹介</strong></td>
                <td><%= simple_format(current_contributor.introduce, {}, {style: "width: 100%;"}) %></td>
              </tr>
            </table>
          </div>
        </div>
    </div>
  </div>
  <div class="card-body">
    <%= link_to new_post_path, class: "btn btn-lg btn-block btn-outline-warning", type: "button" do %>
      投稿する
    <% end %>
  </div>
</div>