<div class="container pl-5">
  <div class="text-center mt-5 mb-3"><h5><strong><%= flash[:notice] %></strong></h5></div>
  <div class="border-bottom" style="background-color: #ffffe5;">
    <h2>投稿する</h2>
  </div>

    <%= form_with(model: @post, url: posts_path, local: true) do |f| %>
    <table class="table table-borderless">
      <tr>
        <th style="width: 20%">タイトル</th>
        <td ></td>
        <td><%= f.text_field :title, autofocus: true, autocomplete: "title",placeholder: "タイトル" %></td>
        <td ></td>
        <td></td>
      </tr>

      <tr>
        <th style="width: 20%"><%= f.label :投稿内容 %></th>
        <td></td>
        <td><%= f.text_area :content, rows: 8, style: "width: 100%;" %></td>
        <td></td>
        <td></td>
      </tr>

      <tr>
        <th style="width: 20%"><%= f.label :画像 %></th>
        <td></td>
        <td><%= f.file_field :image, accept: "image/*" %></td>
        <td></td>
        <td></td>
      </tr>

      <tr>
        <th style="width: 20%"><%= f.label :タグ付け %></th>
        <td></td>
        <td><%= f.text_field :tag_list, class: "form-control", placeholder: "タグをカンマ区切りで入力してください" %></td>
        <td></td>
        <td></td>
      </tr>

    </table>

    <div class="border-top mb-3"></div>
    <div class="text-center">
      <%= f.submit "投稿する", class: "btn btn-success w-25" %>
    </div>
    <% end %>
