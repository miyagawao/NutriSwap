<div class="container pl-5">
  <div class="text-center mt-5 mb-3"><h5><strong><%= flash[:notice] %></strong></h5></div>
  <div class="border-bottom" style="background-color: #ffffe5;">
    <h2>投稿を編集する</h2>
  </div>

    <%= form_with(model: @post, url: posts_path, local: true) do |f| %>
    <table class="table table-borderless">
      <tr>
        <th style="width: 20%">タイトル</th>
        <td ></td>
        <td><%= f.text_field :title, autofocus: true, autocomplete: "title",placeholder: "タイトル" %></td>
        <td ></td>
        <td></td>
      </tr>

      <tr>
        <th style="width: 20%"><%= f.label :投稿内容 %></th>
        <td></td>
        <td><%= f.text_area :content, rows: 8, style: "width: 100%;" %></td>
        <td></td>
        <td></td>
      </tr>

      <tr>
        <th style="width: 20%"><%= f.label :画像 %></th>
        <td></td>
        <td><%= f.file_field :image %></td>
        <td></td>
        <td></td>
      </tr>

     <tr>
        <th style="width: 20%"><%= f.label :tag_list, "タグ付け" %></th>
        <td></td>
        <td><%= f.text_field :tag_list, class: "form-control", id:'tag_list', placeholder: "タグをつける。複数つけるには','で区切ってください。" %></td>
        <td></td>
        <td></td>
      </tr>
      
      <tr>
        <th style="width: 20%"><%= f.label :genre_id, "ジャンルを選択する" %></th>
        <td></td>
        <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %></td>
        <td></td>
        <td></td>
      </tr>

    </table>

    <div class="form-group text-right">
      <%= f.submit "更新する", class:'btn btn-success' %>
      <%= button_to "削除", post_path(@post), method: :delete, data: { confirm: "本当に削除しますか?" }, class: "btn btn-danger" %>
    </div>
    <% end %>